<div class="row">
    <!-- left column -->
    <div class="col-md-6">
        <!-- general form elements -->
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Add College</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            <form role="form" action="/admin/doAddCollege" method="post">
                <div class="box-body">
                    <div class="form-group">
                        <label for="exampleInputEmail1">College Name</label>
                        <input  name="Name" class="form-control" id="exampleInputEmail1" placeholder="College Name">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">College Address</label>
                        <input  name="Address" class="form-control" id="exampleInputEmail1" placeholder="Address">
                    </div>
                    <div class="form-group">
                        <label>Select City</label>
                        <select class="form-control" name="City">
                            {{#if Cities}}
                                {{#each Cities}}
                                    <option value="{{this.city_id}}">{{this.city_name}}</option>
                                {{/each}}
                            {{/if}}

                        </select>
                    </div>


                </div>
                <!-- /.box-body -->

                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>